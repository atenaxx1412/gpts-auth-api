rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // URLs can only be accessed by their owner
    match /urls/{urlId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      
      // Authentication subcollection
      match /authentications/{authId} {
        allow read, write: if request.auth != null && 
          get(/databases/$(database)/documents/urls/$(urlId)).data.ownerId == request.auth.uid;
      }
      
      // Access logs subcollection - read only for owner
      match /access_logs/{logId} {
        allow read: if request.auth != null && 
          get(/databases/$(database)/documents/urls/$(urlId)).data.ownerId == request.auth.uid;
        allow write: if false; // Only server can write logs
      }
    }
  }
}